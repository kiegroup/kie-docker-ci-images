<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  
  <dependencySets>
    
    <!-- Required libs for Tomcat7 shared library. -->
    <dependencySet>
      <includes>
        <include>org.codehaus.btm:btm</include>
        <include>org.codehaus.btm:btm-tomcat55-lifecycle</include>
        <include>com.h2database:h2</include>
        <include>org.jboss.spec.javax.transaction:jboss-transaction-api_1.1_spec</include>
        <include>org.slf4j:slf4j-api</include>
        <include>org.jboss.spec.javax.security.jacc:jboss-jacc-api_1.4_spec</include>
      </includes>
      <unpack>false</unpack>
      <outputDirectory>./tomcat-libs</outputDirectory>
    </dependencySet>

    <!-- KIE Tomcat7 Integration. -->
    <dependencySet>
      <includes>
        <include>org.kie:kie-tomcat-integration</include>
      </includes>
      <unpack>false</unpack>
      <outputDirectory>./tomcat-libs</outputDirectory>
      <outputFileNameMapping>kie-tomcat-integration.jar</outputFileNameMapping>
    </dependencySet>
    
    <!-- KIE Server for Tomcat7 -->
    <dependencySet>
      <includes>
        <include>org.kie.server:kie-server:war:webc</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <outputFileNameMapping>kie-server.war</outputFileNameMapping>
    </dependencySet>
  </dependencySets>

</assembly>